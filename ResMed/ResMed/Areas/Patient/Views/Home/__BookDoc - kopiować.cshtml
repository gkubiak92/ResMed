@model ResMed.Models.Doctors


@{
    ViewData["Title"] = "Szczegóły doktora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <h2>
        @Html.DisplayFor(model => model.FirstName)
        @Html.DisplayFor(model => model.LastName)
    </h2>


    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayFor(model => model.FirstName)
                @Html.DisplayFor(model => model.LastName)
            </dt>
            <dt>
                @Html.DisplayFor(model => model.Specializations.Name)
            </dt>
        </dl>

    </div>

    <div>
        <input type="hidden" id="selectedDate" /> @*ukryte pole które przechwyca klikniętą datę w kalendarzu*@
        <div id="datepicker"></div>

        <input type="text" class="timepicker form-group" />
    </div>

    <div>
        <div class="form-group">
            <input type="submit" value="Zarezerwuj" class="btn btn-default" asp-route-id="@Model.Id"/>
            <a asp-action="Index" class="btn btn-danger">Powrót</a>

        </div>
    </div>
</form>

@section Scripts{

    @*Datepicker script*@
    <script>
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M",
                altField: '#selectedDate'
            });
        });

    @*Timepicker script*@

        $('.timepicker').timepicker({
            timeFormat: 'HH:mm',
            interval: 15,
            minTime: '08:00',
            maxTime: '18:00',
            defaultTime: '11',
            startTime: '08:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
}