@model IEnumerable<ResMed.Models.Doctors>

@{
    ViewData["Title"] = "Lista doktorów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista doktorów</h2>

<div class="row">
    <div class="col-md-12">
        @if(Model.Count() == 0)
        {
            <h1>Nie znaleziono żadnego chujka</h1>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.Image)
                <p>
                    <img src="~/images/DoctorCart/doctor-blank-profile.png" style="width:150px;" />
                    <h3>
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </h3>

                    @Html.DisplayFor(modelItem => item.Specializations.Name)
                    <br>
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                @Html.DisplayFor(modelItem => item.Address)
                <br>
                <a asp-action="BookDoc" asp-route-id="@item.Id" class="btn btn-default">Umów wizytę</a>
                <br /><br /><br />
            </div>
        }
    </div>
</div>
