@model IEnumerable<ResMed.Models.Doctors>

@{
    ViewData["Title"] = "Lista lekarzy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    
</head>

<h2>Lista lekarzy</h2>

<div class="row">
    <div class="col-md-12">
        @if(Model.Count() == 0 || Model == null)
        {
            <h1>Nie znaleziono żadnego lekarza</h1>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <p>
                    <img src="@item.Image" style="height:250px; box-shadow: 3px 3px 1px #ccc;" />
                    <h3>
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </h3>

                    @Html.DisplayFor(modelItem => item.Specializations.Name)
                    <br>
                </p>
                @Html.DisplayFor(modelItem => item.Address)
                <br>
                <a asp-action="BookDoc" asp-route-id="@item.Id" class="btn btn-primary">
                Umów wizytę</a>
                <br /><br /><br />
            </div>
        }
    </div>
</div>
