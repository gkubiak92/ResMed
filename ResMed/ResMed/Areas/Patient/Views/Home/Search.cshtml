@model IEnumerable<ResMed.Models.Doctors>

@{
    ViewData["Title"] = "Lista lekarzy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

</head>

<style>
    .checked {
        color: rgb(32, 201, 151);
    }
</style>

<h2>Lista lekarzy</h2>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0 || Model == null)
        {
            <h1>Nie znaleziono żadnego lekarza spełniającego kryteria</h1>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 col-xs-12 own-border-box card-body">
                <div class="own-border-box-small">
                    <img src="@item.Image" />
                </div>
                <div>
                    <h4>
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @Html.DisplayFor(modelItem => item.LastName)
                    </h4>
                </div>
                <div>

                    @for (int i = 0; i < item.AverageRating; i++)
                    {
                        <span class="fa fa-star checked"></span>
                    }
                    @for (int i = (int)item.AverageRating; i < 5; i++)
                    {
                        <span class="fa fa-star"></span>
                    }
                </div>
                <div>
                    <i class="fa fa-stethoscope" aria-hidden="true"></i>
                    @Html.DisplayFor(modelItem => item.Specializations.Name)
                </div>
                <div>
                    <i class="fa fa-map-marker-alt" aria-hidden="true"></i>
                    @Html.DisplayFor(modelItem => item.Address)
                </div>
                <br>
                <a asp-action="BookDoc" asp-route-id="@item.Id" class="btn btn-info buttonik">Umów wizytę</a>
                <br />

            </div>
        }
    </div>
</div>
