@model ResMed.Models.ViewModel.VisitsViewModel

@{
    ViewData["Title"] = "Anulowanie wizyty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Anulowanie wizyty</h2>

<h3 class="text-danger">Czy jestes pewien, że chcesz anulować tą wizytę?</h3>
<br />
<div class="form-group">

    <div class="form-group">
        <label asp-for="@Model.Visit.Date"></label>: @Html.DisplayFor(model => model.Visit.Date)
    </div>

    <div class="form-group">
        <label asp-for="@Model.Visit.Time"></label>: @Html.DisplayFor(model => model.Visit.Date.TimeOfDay)
    </div>
    <div>
        <label>Lekarz</label>:
        @Html.DisplayFor(model => model.Doctor.FirstName) @Html.DisplayFor(model => model.Doctor.LastName)
    </div>
    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Visit.Id" />
        <input type="submit" value="Anuluj wizytę!" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Powrót</a>
    </form>
</div>
