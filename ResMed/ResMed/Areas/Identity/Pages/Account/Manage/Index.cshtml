@page
@model IndexModel
@using ResMed.Utility;
@using ResMed.Models;
@{
    ViewData["Title"] = "Profil";
}


<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Wyślij e-mail weryfikacyjny</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.DoctorRole))
            {
            <div class="form-group">
                <label asp-for="Input.SpecializationId"></label>
                @{var specList = ViewData["SpecializationsList"] as List<SelectListItem>;} @*pobranie listy specjalizacji z ViewData i przypisanie do listy typu SelectListItem*@
                <select asp-for="Input.SpecializationId" class="form-control" asp-items="@(new SelectList(specList, "Value", "Text"))"></select> @*wyśiwetenie specjalizacji w liscie rozwijanej*@
            </div>


                <div class="form-group">
                    <label asp-for="Input.LicenseNr"></label>
                    <input asp-for="Input.LicenseNr" class="form-control" />
                    <span asp-validation-for="Input.LicenseNr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
            }
            @if (User.IsInRole(SD.PatientRole))
            {
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
            }
            <button type="submit" class="btn btn-default">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
